@model IEnumerable<RideSharingApp.BLL.DTOs.UserResponseDTO>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.IsActive</td>
                <td>
                    @if (user.Role == RideSharingApp.DAL.Entities.UserRole.Driver)
                    {
                        <form asp-action="VerifyDriver" method="post" style="display:inline;">
                            <input type="hidden" name="driverId" value="@user.Id" />
                            <input type="hidden" name="isVerified" value="true" />
                            <button type="submit" class="btn btn-success btn-sm">Verify Driver</button>
                        </form>
                    }
                    <form asp-action="BlockUser" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">Block User</button>
                    </form>
                    <form asp-action="DeactivateUser" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Deactivate User</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>