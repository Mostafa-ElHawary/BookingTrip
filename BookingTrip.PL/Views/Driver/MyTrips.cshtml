@model IEnumerable<RideSharingApp.BLL.DTOs.TripResponseDTO>

@{ ViewData["Title"] = "My Trips"; }

<h1>My Trips</h1>

<table class="table">
    <thead>
        <tr>
            <th>Start Location</th>
            <th>End Location</th>
            <th>Start Time</th>
            <th>Available Seats</th>
            <th>Suggested Fare</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.StartLocation</td>
                <td>@trip.EndLocation</td>
                <td>@trip.StartTime</td>
                <td>@trip.AvailableSeats</td>
                <td>@trip.SuggestedFare</td>
                <td>@trip.Status</td>
                <td>
                    @if (trip.Status == RideSharingApp.DAL.Entities.TripStatus.Scheduled)
                    {
                        <form asp-action="StartTrip" method="post" style="display:inline;">
                            <input type="hidden" name="tripId" value="@trip.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">Start Trip</button>
                        </form>
                    }
                    <form asp-action="AcceptMidRoutePickup" method="post" style="display:inline;">
                        <input type="hidden" name="tripId" value="@trip.Id" />
                        <input type="text" name="pickupLocation" placeholder="Pickup Location" class="form-control-sm" />
                        <input type="text" name="dropoffLocation" placeholder="Dropoff Location" class="form-control-sm" />
                        <button type="submit" class="btn btn-info btn-sm">Accept Mid-Route Pickup</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>